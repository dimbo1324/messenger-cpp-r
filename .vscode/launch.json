{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Запустить сервер (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/server/chat_server",
      "args": [
        "0.0.0.0",
        "8080"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/server",
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}